<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:layoutDirection="ltr"
    tools:context="baruhrissminesweeper.minesweeperpro.CustomGameActivity">

    <LinearLayout
        android:id="@+id/customgameboard"
        android:layout_width="match_parent"
        android:layout_height="415dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/selectbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/open"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/minecustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:onClick="mine"
            app:srcCompat="@drawable/bomb" />

        <ImageView
            android:id="@+id/lockcustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:onClick="lock"
            app:srcCompat="@drawable/lookcube" />

        <ImageView
            android:id="@+id/lockandkey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:onClick="lockandkey"
            app:srcCompat="@drawable/lockandcubecustom" />

        <ImageView
            android:id="@+id/keycustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:onClick="key"
            app:srcCompat="@drawable/keyopen" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/earse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/selectbar"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="70dp"
        android:onClick="earse"
        app:srcCompat="@drawable/eraser" />

    <ImageButton
        android:id="@+id/undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/selectbar"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="70dp"
        android:onClick="undo"
        app:srcCompat="@drawable/undo" />

    <ImageView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="46dp"
        android:layout_marginEnd="90dp"
        android:onClick="play"
        app:srcCompat="@drawable/playbuttoncustom" />

    <Button
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/selectbar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:onClick="size"
        android:text="9X9"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/play"
        android:layout_marginLeft="90dp"
        android:onClick="home"
        app:srcCompat="@drawable/housetwo" />

</RelativeLayout>
